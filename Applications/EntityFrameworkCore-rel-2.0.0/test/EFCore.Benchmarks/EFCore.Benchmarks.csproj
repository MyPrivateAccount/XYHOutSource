  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp2.0'">
    <PackageReference Include="System.Data.SqlClient" Version="$(CoreFxVersion)" />
  </ItemGroup>

</Project>
