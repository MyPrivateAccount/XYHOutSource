    <AssemblyName>Microsoft.EntityFrameworkCore.Benchmarks</AssemblyName>
    <RootNamespace>Microsoft.EntityFrameworkCore.Benchmarks</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
